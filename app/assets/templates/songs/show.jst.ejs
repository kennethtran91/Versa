<div class="annotationDiv">
</div>
<h1>
	<%= song.escape('title') %>
</h1>

<h3>
	<% var artistHref = "#/artists/" + artist.id %>
	<a href="<%= artistHref %>"><%= artist.escape('name') %></a>
</h3>

<% if (albums) { %>
<strong>Albums:</strong>
<ul>
	<% _(albums).each(function(album) { %>
	<li>
		<% var albumHref = "/#/albums/" + album.id %>
		<a href="<%= albumHref %>"><%= album.title %></a>
	</li>
	<% }); %>
</ul>
<% }; %>

<p><strong>Highlight text to annotate</strong></p>

<pre id="lyrics">
<%= song.escape('lyrics') %>
</pre>
<h3>
	Annotations
</h3>
<ul>
	<% annotations.each(function(annotation) { %>
	<% var snippet = song.escape('lyrics').replace("\r", "").substr(annotation.escape('start_char'), annotation.escape('end_char') - annotation.escape('start_char')) %>
	<li>
		<% var annotationHref = "/#/annotations/" + annotation.id %>
		<a href="<%= annotationHref %>"><%= snippet %></a>
	</li>
	<% }) %>
</ul>

