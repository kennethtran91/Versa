<div class="row-fluid">
  <div class="span4 offset4 text-center">
    <h2>Sign in</h2>
    <br>
    <a href="/guest" class="btn btn-huge btn-primary">Try Out As Guest</a>
    <br>
    <br>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div>
      <%= f.text_field :username, :autofocus => true, :placeholder => "Username" %></div>

      <div>
      <%= f.password_field :password, :placeholder => "Password" %></div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <div><%= f.submit "Sign in", :class => "btn btn-huge btn-primary" %></div>
    <% end %>

    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>